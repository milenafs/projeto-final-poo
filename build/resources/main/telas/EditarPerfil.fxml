<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<!-- Tela de Perfil do Usuário -->
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="projetofinal.ui.EditarPerfilController"
            style="-fx-background-color: white;">

        <!-- Cabeçalho superior com título, menu e botão de sair -->
    <top>
        <VBox spacing="0">

            <!-- Barra azul com título e ações de menu/sair -->
            <HBox style="-fx-background-color: #6A7FC1;" alignment="CENTER_LEFT" spacing="10" prefHeight="85">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20" />
                </padding>

                <!-- Título do sistema -->
                <Label text="Gerenciador de Estudos"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" />
                
                <!-- Espaço expansível entre os elementos -->
                <Region HBox.hgrow="ALWAYS" />
                </HBox>

            <!-- Botão de voltar posicionado -->
            <AnchorPane prefHeight="50">
                <Button fx:id="voltarButton" styleClass="botao-voltar" onAction="#handleVoltar" layoutX="50" layoutY="15" 
        style="-fx-background-color: transparent;">
                    <graphic>
                        <FontIcon iconLiteral="fas-arrow-left" iconSize="35" iconColor="#87A5EF" />
                    </graphic>
                </Button>
            </AnchorPane>

            <!-- Título central "Editar Perfil" -->
            <StackPane prefHeight="30">
                <Label text="Editar Perfil"
                       style="-fx-font-weight: bold; -fx-font-size: 40px; -fx-text-fill: #395BC7;" />
            </StackPane>
        </VBox>
    </top>

    <!-- Conteúdo central para editar perfil -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" maxWidth="500">
            <padding>
                <Insets top="40" right="50" bottom="20" left="50" />
            </padding>

            <!-- Espaço para editar o nome do aluno-->
            <Label text="Nome Completo" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <TextField fx:id="nomeTextField" promptText="Insira seu nome completo" prefHeight="50"
                style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 8; -fx-font-size: 16px; -fx-border-color: #d3d3d3;"/>

            <!-- Espaço para editar o curso do aluno-->
            <Label text="Curso" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <TextField fx:id="cursoTextField" promptText="Insira seu curso" prefHeight="50"
                style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 8; -fx-font-size: 16px; -fx-border-color: #d3d3d3;"/>

            <!-- Espaço para editar o CR do aluno-->
            <Label text="CR (Coeficiente de Rendimento)" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <TextField fx:id="crTextField" promptText="Insira seu CR" prefHeight="50"
                style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 8; -fx-font-size: 16px; -fx-border-color: #d3d3d3;"/>

        </VBox>
    </center>

    <!-- Rodapé com botão de salvar alterações -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Button fx:id="salvarButton" text="Salvar Alterações" styleClass="botao-personalizado" onAction="#handleSalvar"/>
        </HBox>
    </bottom>

</BorderPane>