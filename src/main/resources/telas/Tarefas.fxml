<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="projetofinal.ui.TarefasController">

    <!-- Cabeçalho azul -->
    <top>
        <VBox spacing="0">
            <!-- Cabeçalho azul -->
            <HBox style="-fx-background-color: #6A7FC1;" alignment="CENTER_LEFT" spacing="10" prefHeight="60">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Gerenciador de Estudos" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Circle radius="12" fill="#C0C3E5"/>
            </HBox>

            <!-- Área da seta com posição fixa -->
            <AnchorPane prefHeight="50">
                <Button styleClass="botao-voltar" onAction="#handleVoltar" layoutX="50" layoutY="30">
                    <graphic>
                        <FontIcon iconLiteral="fas-arrow-left" iconSize="30" iconColor="#87A5EF"/>
                    </graphic>
                </Button>
            </AnchorPane>

             <!-- Título fixo -->
            <Label text="Tarefas" style="-fx-font-weight: bold; -fx-font-size: 40px; -fx-text-fill: #395BC7;" />

        </VBox>
    </top>


    <center>
        <VBox alignment="TOP_CENTER" spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- ScrollPane apenas para a lista -->
            <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;" maxHeight="400">
                <VBox alignment="TOP_CENTER" spacing="10" maxWidth="600" fx:id="tarefasContainer">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </ScrollPane>

        </VBox>
    </center>

     <bottom>
       <Button text="+ Novo item" styleClass="botao-personalizado" maxWidth="150" onAction="#handleNovoItem" />
    </bottom>
</BorderPane>
